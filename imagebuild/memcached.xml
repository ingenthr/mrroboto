<service_bundle type='manifest' name='memcached' >
<service name='application/database/memcached' type='service' version='1' >
  <property_group name='memcached' type='application'>
    <property name='options' type='astring'>
      <astring_list>
        <value_node value='-u'/>
        <value_node value='noaccess'/>
        <value_node value='-L'/>
      </astring_list>
    </property>
    <propval name='value_authorization' type='astring' 
     value='solaris.smf.value.memcached' />
    <propval name='action_authorization' type='astring' 
     value='solaris.smf.manage.memcached' />
  </property_group>
<instance name='northscale14' enabled='true'>

   <dependency
      name='network'
      grouping='require_all'
      restart_on='none'
      type='service'>
      <service_fmri value='svc:/milestone/network:default' />
   </dependency>

   <dependency
      name='name-services'
      grouping='require_all'
      restart_on='none'
      type='service'>
      <service_fmri value='svc:/milestone/name-services:default' />
   </dependency>

   <exec_method 
      type='method' 
      name='start'
      exec='/usr/local/bin/memcached-svc start'
      timeout_seconds='-1' />

   <exec_method 
      type='method' 
      name='stop'
      exec='/usr/local/bin/memcached-svc stop %{restarter/contract}'
      timeout_seconds='60' />

</instance>

    <stability value='Evolving' />

    <template>
      <common_name>
         <loctext xml:lang='C'>memcached 1.4.0 </loctext>
      </common_name>
      <documentation>
         <manpage title='memcached' section='1m' manpath='/usr/local/share/man' />
      </documentation>
    </template>

</service>
</service_bundle>
