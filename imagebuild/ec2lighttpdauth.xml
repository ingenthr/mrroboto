<service_bundle type="manifest" name="ec2lighttpdauth">

<service name="application/ec2lighttpdauth" type="service" version="1">

	<single_instance/>

       <dependency name="filesystem-local" grouping="require_all" restart_on="none" type="service">
           <service_fmri value="svc:/system/filesystem/local:default"/>
       </dependency>

       <dependency name="network" grouping="require_all" restart_on="error" type="service">
           <service_fmri value="svc:/milestone/network:default"/>
       </dependency>

	<instance name="default" enabled="true">
		<exec_method type="method" name="start" exec="/usr/local/tdf/gen-htdigest.sh" timeout_seconds="60"/>

		<exec_method type="method" name="refresh" exec="/usr/local/tdf/gen-htdigest.sh" timeout_seconds="60"/>

		<exec_method type="method" name="stop" exec=":true" timeout_seconds="60"/>

		<property_group name="ec2lighttpdauth" type="application">
			<propval name="duration" type="astring" value="transient"/>
		</property_group>

		<property_group name="general" type="framework">
			<propval name="action_authorization" type="astring" value="solaris.smf.manage.http/lighttpd14"/>
			<propval name="value_authorization" type="astring" value="solaris.smf.manage.http/lighttpd14"/>
		</property_group>

	</instance>

	<stability value="Unstable"/>

	<template>
		<common_name>
			<loctext xml:lang="C">
				EC2 instance ID based configuration
			</loctext>
		</common_name>
	</template>

</service>

</service_bundle>
